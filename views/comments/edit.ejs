<%- include('../partials/header') %>
<div class="container">
    <div class="container margin-top-adder">
        <div class="card m-auto padding-3rem shadow">
            <h1 class="text-center">Edit comment for <%=campground.name%></h1>
            <form action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=PUT" method="POST" class="addForm">
                <label>Comment
                    <input type="text" name="comment[text]" class="form-control" value="<%=comment.text%>">
                </label>
                
                <input type="submit" class="btn btn-submit">
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>